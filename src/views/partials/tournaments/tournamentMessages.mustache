<h4 class="mb-2">Messages</h4>
<div id="messages-container" class="mb-3">
  {{#messages}}
  <div class="card mb-3 tournament-message border-0" id="message-{{ _id }}">
    <div class="d-flex card-header align-items-center">
      {{#user}}
      <h6 class="faded">{{ name }}</h6>
      {{/user}}
      {{# isLoggedInUsers }}
      <button
        type="button"
        class="faded btn ml-auto text-light delete-btn"
        id="{{ _id }}"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          class="bi bi-x"
          viewBox="0 0 16 16"
        >
          <path
            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
          />
        </svg>
      </button>
      {{/ isLoggedInUsers }}
    </div>
    <div class="card-body">
      <p class="card-text px-3">{{ body }}</p>
    </div>
    <div class="card-footer font-italic">
      <span class="small faded">{{ createdAt }}</span>
    </div>
  </div>
  {{/messages}}
  {{^messages}}
  <p class="text-light faded">
    Currently there are no messages in this tournament
  </p>
  {{/messages}}
</div>
<form id="send-message-form">
  <div class="input-group mb-3">
    <input
      id="input-message"
      type="text"
      name="message"
      class="form-control"
      placeholder="Enter your message..."
      aria-label="Message..."
      aria-describedby="the message to be sent"
      maxlength="255"
      required
    />
    <div class="input-group-append">
      <button
        id="btn-send-message"
        type="submit"
        class="btn btn-primary"
        type="button"
      >
        Send
      </button>
    </div>
  </div>
</form>
