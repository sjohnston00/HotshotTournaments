<a
  class="card mr-2 my-3 text-decoration-none"
  style="width: 20rem"
  href="/tournaments/{{ _id }}"
>
  <div class="card-header">
    <div class="d-flex align-items-center justify-content-between card-title">
      <h3 class="">{{ name }}</h3>
      <span class="badge badge-dark p-2">{{ type }}</span>
    </div>
    <h5 class="card-text font-italic d-flex align-items-center">
      {{ game }}
      <span class="ml-2"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          height="24"
          width="24"
          viewBox="0 0 640 512"
        >
          <path
            d="M480.07 96H160a160 160 0 1 0 114.24 272h91.52A160 160 0 1 0 480.07 96zM248 268a12 12 0 0 1-12 12h-52v52a12 12 0 0 1-12 12h-24a12 12 0 0 1-12-12v-52H84a12 12 0 0 1-12-12v-24a12 12 0 0 1 12-12h52v-52a12 12 0 0 1 12-12h24a12 12 0 0 1 12 12v52h52a12 12 0 0 1 12 12zm216 76a40 40 0 1 1 40-40 40 40 0 0 1-40 40zm64-96a40 40 0 1 1 40-40 40 40 0 0 1-40 40z"
          /></svg
      ></span>
    </h5>
  </div>
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-between card-text">
      <p class="">Begins</p>
      <p class="">{{ parsedStartDate }}</p>
    </div>
    <div class="d-flex align-items-center justify-content-between card-text">
      <p class="">Ends</p>
      <p class="">{{ parsedEndDate }}</p>
    </div>
    <div class="d-flex align-items-center justify-content-between card-text">
      <p class="">Created</p>
      <p class="">{{ parsedDateCreated }}</p>
    </div>
  </div>
</a>
