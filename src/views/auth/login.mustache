{{> partials/head}}
{{> partials/navbar}}
<body>
  <div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <form action="/auth/login" class="w-100" method="POST">
      <h2 class="text-center">Log in</h2>
      {{> partials/messages}}
      <div class="form-group">
        <label for="email" class="col-form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          maxlength="324"
          class="form-control"
          required="required"
        />
      </div>

      <div class="form-group">
        <label for="password" class="col-form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          minlength="6"
          maxlength="64"
          class="form-control"
          required="required"
        />
      </div>
      <div class="form-group">
        <button
          id="login-button"
          type="submit"
          class="btn btn-primary btn-block"
        >
          Log in
        </button>
      </div>
      <a href="/" class="float-left">Home</a>
      <a href="/auth/register" class="float-right">Create an Account</a>
    </form>
  </div>
</body>
{{> partials/footer}}
