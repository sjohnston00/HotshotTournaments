{{> partials/head}}
{{> partials/navbar}}
<body class="container">
  <div >
    <form action="/auth/register" method="POST">
      <h2 class="text-center">Register</h2>
      {{> partials/messages}}
      <div class="form-group">
        <label for="name" class="col-form-label">Full Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          required="required"
        />
      </div>

      <div class="form-group">
        <label for="email" class="col-form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required="required"
        />
      </div>

      <div class="form-group">
        <label for="password" class="col-form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          minlength="6"
          required="required"
        />
      </div>
      <div class="form-group">
        <button
          id="login-button"
          type="submit"
          class="btn btn-primary btn-block"
        >
          Register
        </button>
      </div>
      <a href="/" class="float-left">Home</a>
      <a href="/auth/login" class="float-right"
        >Already have an account? Sign In</a
      >
    </form>
  </div>
</body>
{{> partials/footer}}
